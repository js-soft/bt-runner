{
    "src_folders": ["./test-browser/"],
    "exclude": ["./test-browser/server.js"],

    "webdriver": {
        "start_process": true,
        "port": 9515
    },

    "test_runner": {
        "type": "mocha",
        "options": {
            "ui": "bdd",
            "reporter": "list"
        }
    },

    "test_settings": {
        "default": {
            "desiredCapabilities": {
                "browserName": "chrome"
            }
        }
    }
}
